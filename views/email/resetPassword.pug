extends baseEmail 

block content 
  p Hi #{firstName},
  p Forgot your password? Submit a new patch request to: #{url}.
  p This password reset token is valid for only 10 minutes.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reseet your password 
  p If you didn't forget your password, ignore this email.